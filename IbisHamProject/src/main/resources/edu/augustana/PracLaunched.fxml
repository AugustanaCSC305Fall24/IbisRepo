<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="463.0" prefWidth="703.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.PracticeModeController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="125.0">
            <children>
            <Pane prefHeight="92.0" prefWidth="166.0">
               <children>
                      <Button fx:id="PracFromDict" layoutX="22.0" layoutY="14.0" onAction="#switchToPracPage" text="Practice Home" />
                      <Button fx:id="HomeFromPracMode" layoutX="30.0" layoutY="53.0" mnemonicParsing="false" onAction="#switchtoHomePage" text="Home Page" />
               </children>
            </Pane>
            </children>
        </VBox>

        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="384.0" spacing="20.0">
            <children>
                <Pane prefHeight="62.0" prefWidth="361.0">
                    <children>
                        <Label layoutX="81.0" layoutY="-5.0" text="Practice Radio">
                            <font>
                                <Font name="System Bold" size="27.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <!-- Frequency Tuner Pane -->
                <Pane prefHeight="300.0" prefWidth="400.0">
                    <children>
                        <Slider fx:id="FrequencySlider" blockIncrement="0.1" layoutX="22.0" layoutY="223.0" majorTickUnit="2.0" max="108.0" min="88.0" minorTickCount="4" prefWidth="300.0" showTickLabels="true" showTickMarks="true" value="99.5">
                     </Slider>

                        <Label fx:id="FrequencyLabel" layoutX="70.0" layoutY="260.0" style="-fx-font-size: 16px;" text="Current Frequency: 99.5 MHz" />
                        <BarChart fx:id="frequencyBarChart" layoutX="11.0" layoutY="28.0" prefHeight="174.0" prefWidth="322.0">
                            <xAxis>
                                <CategoryAxis label="MHz" side="BOTTOM" fx:id="xAxis" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxis" label="Strength" lowerBound="1" side="LEFT" tickUnit="1" upperBound="10" />
                            </yAxis>
                        </BarChart>
                    </children>
                </Pane>

            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="177.0">
            <children>
            <Label text="Morse Code box">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <TextArea fx:id="TranslateBox" prefHeight="98.0" prefWidth="180.0">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Label text="Message box">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="45.0" />
               </padding>
            </Label>
            <TextArea fx:id="MessageBox" prefHeight="92.0" prefWidth="193.0">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </TextArea>
            <Pane prefHeight="135.0" prefWidth="180.0">
               <children>
                      <Button fx:id="secondaryButton" layoutX="12.0" layoutY="68.0" onAction="#switchToDictionary" prefHeight="45.0" prefWidth="138.0" text="Morse Code Dictionary">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding></Button>
                        <Button fx:id="dotButton" layoutX="55.0" layoutY="15.0" mnemonicParsing="false" onAction="#onPlayAudioDit" text="Dot">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding></Button>
                        <Button fx:id="dashButton" layoutX="81.0" layoutY="15.0" mnemonicParsing="false" onAction="#onPlayAudioDash" text="Dash">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding></Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Pane>
            </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="9.0" top="2.0" />
         </padding>
        </VBox>
    </children>
</HBox>
