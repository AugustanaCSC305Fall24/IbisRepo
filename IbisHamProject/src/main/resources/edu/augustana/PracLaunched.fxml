<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="463.0" prefWidth="703.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.PracticeModeController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="125.0">
            <children>
            <Pane prefHeight="92.0" prefWidth="166.0">
               <children>
                      <Button fx:id="PracFromDict" layoutX="22.0" layoutY="14.0" onAction="#switchToPracPage" text="Practice Home" translateY="40.0" />
                      <Button fx:id="HomeFromPracMode" layoutX="30.0" layoutY="53.0" mnemonicParsing="false" onAction="#switchtoHomePage" text="Home Page" translateY="40.0" />
               </children>
            </Pane>
            </children>
        </VBox>

        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="384.0" spacing="20.0">
            <children>
                <Pane prefHeight="62.0" prefWidth="361.0">
                    <children>
                        <Label layoutX="81.0" layoutY="-5.0" text="Practice Radio">
                            <font>
                                <Font name="System Bold" size="27.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <!-- Frequency Tuner Pane -->
                <Pane prefHeight="425.0" prefWidth="344.0">
                    <children>
                        <Slider fx:id="FrequencySlider" blockIncrement="0.001" layoutX="22.0" layoutY="306.0" majorTickUnit="0.004" max="7.067" min="7.000" minorTickCount="4" prefWidth="300.0" showTickLabels="true" showTickMarks="true" value="7.000">
                     </Slider>

                        <Label fx:id="FrequencyLabel" layoutX="66.0" layoutY="344.0" style="-fx-font-size: 16px;" text="Current Frequency: 7.000 MHz" />
                  <TextArea fx:id="MainMessageBox" layoutX="13.0" layoutY="14.0" prefHeight="226.0" prefWidth="319.0" />
                  <Slider layoutX="104.0" layoutY="260.0" prefHeight="14.0" prefWidth="138.0" />
                  <Label layoutX="157.0" layoutY="274.0" prefHeight="17.0" prefWidth="33.0" text="Filter" />
                    </children>
                </Pane>

            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <VBox alignment="TOP_CENTER" prefHeight="463.0" prefWidth="177.0">
            <children>
            <Label text="Morse Code box" translateY="20.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <TextArea fx:id="morseTextBox" prefHeight="98.0" prefWidth="180.0" translateY="20.0">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Label text="Message box" translateY="20.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="45.0" />
               </padding>
            </Label>
            <TextArea fx:id="englishTextBox" prefHeight="92.0" prefWidth="193.0" translateY="20.0">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </TextArea>
            <Pane prefHeight="135.0" prefWidth="180.0">
               <children>
                  <Button fx:id="playButton" layoutX="94.0" layoutY="14.0" mnemonicParsing="false" onAction="#play" text="Play" translateY="20.0" />
                  <Button fx:id="SendButton" layoutX="32.0" layoutY="14.0" mnemonicParsing="false" onAction="#sendAction" text="Send" translateY="20.0" />
                      <Button fx:id="secondaryButton" layoutX="14.0" layoutY="84.0" onAction="#switchToDictionary" prefHeight="37.0" prefWidth="138.0" text="Morse Code Dictionary">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Pane>
            </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="9.0" top="2.0" />
         </padding>
        </VBox>
    </children>
</HBox>
