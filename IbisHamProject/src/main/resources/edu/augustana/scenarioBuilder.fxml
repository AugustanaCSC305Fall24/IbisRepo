<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="678.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.HomePageController">
   <children>
      <Pane prefHeight="202.0" prefWidth="638.0">
         <children>
            <Label layoutX="16.0" layoutY="14.0" text="Bot Scenario Builder">
               <font>
                  <Font name="Arial Bold" size="60.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <VBox prefHeight="200.0" prefWidth="372.0" spacing="15.0" translateX="175.0" translateY="-80.0">
         <children>
            <HBox prefHeight="64.0" prefWidth="638.0" spacing="47.0">
               <children>
                  <Label text="Name: ">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <TextField fx:id="NameBox" prefHeight="37.0" prefWidth="135.0" promptText="What is its name?" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="12.0">
               <children>
                  <Label text="Character:">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <TextField fx:id="CharacterBox" prefHeight="38.0" prefWidth="161.0" promptText="Personality, profession, etc..." />
               </children>
            </HBox>
            <HBox prefHeight="90.0" prefWidth="638.0" spacing="64.0">
               <children>
                  <Label text="Goal: ">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <TextField fx:id="GoalBox" prefHeight="39.0" prefWidth="149.0" promptText="What is the user's goal?" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Obstacles:">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ObstacleBox" prefHeight="38.0" prefWidth="161.0" promptText="What will hinder the user?" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="SaveButton" mnemonicParsing="false" text="Save" translateY="-25.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
